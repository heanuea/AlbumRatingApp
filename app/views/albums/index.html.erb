<h1.class="current-category"><%= params[:category] %></h1>

<% if @albums.count == 0 %>
	<h3>There are no Albums here </h3>
<% else%>
<div class="row">
	<% @albums.each do |album| %>
	<div  class="col-md-3">
	    <a href="/albums/ <%= album.id %>">
	        <%= image_tag album.album_img.url(:album_index), class: "album" %>
	    </a>
	    </div>
<% end %>
</div>
<% end %>
