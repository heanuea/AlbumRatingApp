<h2><%= @album.title %></h2>
<h3><%= @album.artist %></h3>
<p><%= @album.info %></p>


<div class="links btn-group">
<% if user_signed_in? %>
<% if @album.user_id == current_user.id %>
		<%= link_to "Edit", edit_album_path(@album) %>
		<%= link_to "Delete", album_path(@album), method: :delete, data:
		 {confirm: "Are You Sure" } %>
	<% end %>
<% end %>
</div>
